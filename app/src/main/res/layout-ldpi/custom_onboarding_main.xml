<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:filterTouchesWhenObscured="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/custom_slide_image"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="64dp"
        android:scaleType="centerInside"
        android:src="@drawable/onboarding1"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/custom_slide_big_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@color/colorPrimary"
        android:gravity="start"
        android:paddingLeft="36dp"
        android:paddingRight="36dp"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/custom_slide_big_text_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/custom_slide_big_text"
        android:layout_gravity="start"
        android:layout_marginBottom="12dp"
        android:background="@color/colorPrimary"

        android:paddingLeft="36dp"
        android:paddingTop="6dp"
        android:paddingRight="36dp"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <Button
        android:id="@+id/custom_slide_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/custom_slide_big_text_sub"
        android:layout_marginStart="36dp"
        android:layout_marginTop="6dp"
        android:textColor="@color/colorPrimary"
        android:visibility="gone" />

</RelativeLayout>

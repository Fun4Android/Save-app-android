<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_margin="0dp"
    android:filterTouchesWhenObscured="true"
    android:orientation="vertical"
    android:padding="6dp">

    <LinearLayout
        android:id="@+id/ivGroup"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_margin="0dp"
        android:orientation="vertical"
        android:padding="0dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ProgressBar
                android:id="@+id/progress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:padding="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/no_thumbnail"
                tools:ignore="ContentDescription" />

        </FrameLayout>

        <com.github.derlio.waveform.SimpleWaveformView
            android:id="@+id/waveform"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:visibility="gone"
            app:indicatorColor="#aa0000"
            app:waveformColor="#999999" />

    </LinearLayout>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivGroup"
        android:layout_centerVertical="true"
        android:layout_margin="16dp"
        android:singleLine="true"
        android:visibility="gone"
        tools:text="title"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/file_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivGroup"
        android:layout_margin="16dp"
        android:singleLine="true"
        android:visibility="gone"
        tools:text="create date"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/video_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:contentDescription="@string/is_video"
        android:src="@drawable/ic_videocam_black_24dp"
        android:visibility="gone"
        app:tint="@color/colorMediaOverlayIcon"
        tools:text="title"
        tools:visibility="visible" />

</RelativeLayout>

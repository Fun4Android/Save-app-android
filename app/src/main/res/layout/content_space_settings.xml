<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:gravity="top"
    tools:context=".core.SpaceSettingsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginBottom="12dp"
        android:layout_marginTop="24dp"
        android:id="@+id/section_space"
        >
    <com.github.abdularis.civ.AvatarImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/avatar_default"
        android:id="@+id/space_avatar"

        />
    <TextView
        android:id="@+id/txtSpaceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/space_avatar"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="6dp"

        />

    <TextView
        android:id="@+id/txtSpaceUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_toEndOf="@+id/space_avatar"
        android:layout_below="@+id/txtSpaceName"
        android:layout_marginLeft="6dp"

        />
    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/header_projects"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/oablue"
        android:layout_marginTop="18dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listProjects"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/header_settings"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/oablue"
        android:layout_marginTop="18dp"
        />

    <TextView
        android:id="@+id/btnMetadata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/metadata"
        android:textSize="22dp"

        android:layout_marginTop="6dp"
        />
    <TextView
        android:id="@+id/btnDataUse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/action_data_use"
        android:textSize="22dp"

        android:layout_marginTop="6dp"
        />
    <TextView
        android:id="@+id/btnNetworking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/networking"
        android:textSize="22dp"
        android:layout_marginTop="6dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/header_info"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/oablue"
        android:layout_marginTop="18dp"

        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="?android:attr/listDivider" />
    <TextView
        android:id="@+id/btnPrivacy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/action_privacy"
        android:textSize="22dp"
        android:onClick="onPrivacyClick"
        android:layout_marginTop="3dp"
        />


    <TextView
        android:id="@+id/btnAcount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/action_about"
        android:textSize="22dp"
        android:onClick="onAboutClick"
        android:layout_marginTop="3dp"
        />


</LinearLayout>
</ScrollView>
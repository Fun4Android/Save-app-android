<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:gravity="top"
    tools:context=".SpaceSettingsActivity">

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/avatar_default"
        android:layout_marginBottom="36dp"
        android:layout_marginTop="24dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SERVER SETTINGS"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/oablue"
        />
    <TextView
            android:id="@+id/btnServerLoginInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Server Login Info"
            android:textSize="22dp"
            />


    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="?android:attr/listDivider" />
    <TextView
        android:id="@+id/btnCredentials"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Credentials"
        android:textSize="22dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="?android:attr/listDivider" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PROJECT SETTINGS"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/oablue"
        android:layout_marginTop="8dp"

        />
    <TextView
        android:id="@+id/btnProjectOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Project One Demo"
        android:textSize="22dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="?android:attr/listDivider" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="APP SETTINGS"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/oablue"
        android:layout_marginTop="8dp"
        />
    <TextView
        android:id="@+id/btnDatAUse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Data Use"
        android:textSize="22dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="?android:attr/listDivider" />
    <TextView
        android:id="@+id/btnPrivacy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Privacy"
        android:textSize="22dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="?android:attr/listDivider" />
</LinearLayout>

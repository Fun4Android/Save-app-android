<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="36dp"
    >

    <TextView
        android:id="@+id/custom_slide_big_text_headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE by OpenArchive"
        android:textColor="@color/oablue"
        android:layout_gravity="start|top"
        android:layout_marginLeft="0dp"
        android:textStyle="bold"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/custom_slide_big_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="This is the big text"
        android:textColor="@color/oablue"
        android:gravity="start"
        android:textStyle="bold"
        android:textSize="64sp"/>
    <TextView
        android:id="@+id/custom_slide_big_text_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="okay cool"
        android:textColor="@color/oablue"
        android:layout_gravity="start"
        android:textStyle="bold"
        android:textSize="16sp"
        />
    <Button
        android:id="@+id/custom_slide_button"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:textColor="@color/oablue"
        android:text="button"
        android:background="@color/white"
        android:layout_gravity="end"
        android:layout_marginTop="200dp"
        />
</LinearLayout>
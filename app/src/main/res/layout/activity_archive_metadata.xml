<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp" >


        <EditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_title_lbl"
            android:layout_centerVertical="true"
            android:hint="Title"/>



        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_description_lbl"
            android:layout_centerVertical="true"
            android:hint="Description" />



        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_author_lbl"
            android:layout_centerVertical="true"
            android:hint="Author" />



        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_location_lbl"
            android:layout_toRightOf="@+id/iv_location"
            android:layout_centerVertical="true"
            android:hint="Location" />



        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_tags_lbl"
            android:layout_toRightOf="@+id/iv_tags"
            android:layout_centerVertical="true"
            android:hint="Tags" />



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/groupLicenseChooser"

        >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:text="Choose a license:" />


    <RadioGroup
        android:id="@+id/radioGroupCC"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/radioByNcNd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/byncnd"
            android:button="@null"
            android:text="" />

        <RadioButton
            android:id="@+id/radioBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/by"
            android:button="@null"
            android:text="" />

        <RadioButton
            android:id="@+id/radioBySa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/bysa"
            android:button="@null"
            android:text="" />

    </RadioGroup>

    </LinearLayout>
    <TextView
        android:id="@+id/tv_cc_license"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</LinearLayout>
</ScrollView>
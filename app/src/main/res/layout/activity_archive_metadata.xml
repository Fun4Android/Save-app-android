<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >

    <TextView
        android:id="@+id/tvLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/lbl_share_prefs"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/background_dark" />

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_title"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_centerVertical="true"
            android:paddingRight="8dp"
            android:src="@drawable/ic_action_picture" />

        <TextView
            style="@style/TextViewLabel"
            android:id="@+id/tv_title_lbl"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_title"
            android:text="Title"/>

        <Switch
            android:id="@+id/sw_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textOff="@string/lbl_off"
            android:textOn="@string/lbl_on" />

    </RelativeLayout>

    <TextView
        style="@style/TextViewAlert"
        android:id="@+id/tv_title_value"
        android:hint="@string/lbl_enter_value" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/iv_description"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_centerVertical="true"
            android:paddingRight="8dp"
            android:src="@drawable/ic_action_emo_basic" />

        <TextView
            style="@style/TextViewLabel"
            android:id="@+id/tv_description_lbl"
            android:layout_toRightOf="@+id/iv_description"
            android:layout_centerVertical="true"
            android:text="Description" />

        <Switch
            android:id="@+id/sw_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textOff="@string/lbl_off"
            android:textOn="@string/lbl_on" />
    </RelativeLayout>

    <TextView
        style="@style/TextViewAlert"
        android:id="@+id/tv_description_value"
        android:hint="@string/lbl_enter_value" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/iv_author"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_centerVertical="true"
            android:paddingRight="8dp"
            android:src="@drawable/ic_action_emo_basic" />

        <TextView
            style="@style/TextViewLabel"
            android:id="@+id/tv_author_lbl"
            android:layout_toRightOf="@+id/iv_author"
            android:layout_centerVertical="true"
            android:text="Author" />

        <Switch
            android:id="@+id/sw_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textOff="@string/lbl_off"
            android:textOn="@string/lbl_on" />
    </RelativeLayout>

    <TextView
        style="@style/TextViewAlert"
        android:id="@+id/tv_author_value"
        android:hint="@string/lbl_enter_value" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:paddingTop="4dp" >

        <ImageView
            android:id="@+id/iv_location"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_centerVertical="true"
            android:paddingRight="8dp"
            android:src="@drawable/ic_action_location" />

        <TextView
            style="@style/TextViewLabel"
            android:id="@+id/tv_location_lbl"
            android:layout_toRightOf="@+id/iv_location"
            android:layout_centerVertical="true"
            android:text="Location" />

        <Switch
            android:id="@+id/sw_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textOff="@string/lbl_off"
            android:textOn="@string/lbl_on" />
    </RelativeLayout>

    <TextView
        style="@style/TextViewAlert"
        android:id="@+id/tv_location_value"
        android:hint="@string/lbl_enter_value" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:paddingTop="4dp" >

        <ImageView
            android:id="@+id/iv_tags"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_centerVertical="true"
            android:paddingRight="8dp"
            android:src="@drawable/ic_action_location" />

        <TextView
            style="@style/TextViewLabel"
            android:id="@+id/tv_tags_lbl"
            android:layout_toRightOf="@+id/iv_tags"
            android:layout_centerVertical="true"
            android:text="Tags" />

        <Switch
            android:id="@+id/sw_tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textOff="@string/lbl_off"
            android:textOn="@string/lbl_on" />
    </RelativeLayout>

    <TextView
        style="@style/TextViewAlert"
        android:id="@+id/tv_tags_value"
        android:hint="@string/lbl_enter_value" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:paddingTop="4dp" >

        <ImageView
            android:id="@+id/iv_use_tor"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_centerVertical="true"
            android:paddingRight="8dp"
            android:src="@drawable/ic_action_emo_basic" />

        <TextView
            style="@style/TextViewLabel"
            android:layout_toRightOf="@+id/iv_use_tor"
            android:layout_centerVertical="true"
            android:text="Use Tor" />

        <Switch
            android:id="@+id/sw_use_tor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textOff="@string/lbl_off"
            android:textOn="@string/lbl_on" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:text="Choose a license:"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </LinearLayout>

    <RadioGroup
        android:id="@+id/radioGroupCC"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/radioByNcNd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/byncnd"
            android:text="" />

        <RadioButton
            android:id="@+id/radioBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/by"
            android:text="" />

        <RadioButton
            android:id="@+id/radioBySa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/bysa"
            android:text="" />

    </RadioGroup>

    <TextView
        android:id="@+id/tv_cc_license"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/lblSave"
        android:textSize="14sp" />

</LinearLayout>
</ScrollView>
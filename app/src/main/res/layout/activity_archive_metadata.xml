<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:filterTouchesWhenObscured="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <EditText
            android:id="@+id/tv_author_lbl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_author"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/ivEditTitle"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="12dp"
                android:background="@color/colorFloatIconBackground"
                android:importantForAccessibility="no"
                app:srcCompat="@drawable/ic_tag_unselected" />

            <EditText
                android:id="@+id/tv_title_lbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_title"
                android:importantForAutofill="no"
                android:inputType="text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tags_indicator"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="12dp"
                android:background="@color/colorFloatIconBackground"
                android:importantForAccessibility="no"
                app:srcCompat="@drawable/ic_tag_unselected" />

            <EditText
                android:id="@+id/tv_tags_lbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_tags"
                android:importantForAutofill="no"
                android:inputType="textNoSuggestions" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/location_indicator"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="12dp"
                android:background="@color/colorFloatIconBackground"
                android:importantForAccessibility="no"
                app:srcCompat="@drawable/ic_location_unselected" />

            <EditText
                android:id="@+id/tv_location_lbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_location"
                android:importantForAutofill="no"
                android:inputType="textPostalAddress" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/desc_indicator"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="12dp"
                android:background="@color/colorFloatIconBackground"
                android:importantForAccessibility="no"
                app:srcCompat="@drawable/ic_edit_unselected" />

            <EditText
                android:id="@+id/tv_description_lbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_description"
                android:importantForAutofill="no"
                android:inputType="textShortMessage" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/row_flag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/flag_indicator"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="12dp"
                android:background="@color/colorFloatIconBackground"
                app:srcCompat="@drawable/ic_flag_unselected"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tv_flag_lbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_flag"
                android:padding="3dp"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:filterTouchesWhenObscured="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">


            <EditText
                android:id="@+id/tv_author_lbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:hint="@string/hint_author"
                android:visibility="gone" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">


                <ImageView
                    android:id="@+id/ivEditTitle"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="12dp"
                    android:background="@color/float_transparent"
                    app:srcCompat="@drawable/ic_tag_unselected"

                    />

                <EditText
                    android:id="@+id/tv_title_lbl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:hint="@string/hint_title" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/ivEditTags"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="12dp"
                    android:background="@color/float_transparent"
                    app:srcCompat="@drawable/ic_tag_unselected"

                    />

                <EditText
                    android:id="@+id/tv_tags_lbl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:hint="@string/hint_tags" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/ivEditLocation"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="12dp"
                    android:background="@color/float_transparent"
                    app:srcCompat="@drawable/ic_location_unselected"

                    />

                <EditText
                    android:id="@+id/tv_location_lbl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:hint="@string/hint_location" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/ivEditNotes"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="12dp"
                    android:background="@color/float_transparent"
                    app:srcCompat="@drawable/ic_edit_unselected"

                    />

                <EditText
                    android:id="@+id/tv_description_lbl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_description" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/row_flag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/ivEditFlag"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="12dp"
                    android:background="@color/float_transparent"
                    app:srcCompat="@drawable/ic_flag_unselected"

                    />

                <TextView
                    android:id="@+id/tv_flag_lbl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_flag"
                    android:padding="3dp"
                    android:textSize="18dp" />

            </LinearLayout>


            <EditText
                android:id="@+id/tv_cc_license"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_license"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/groupLicenseChooser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:visibility="gone">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/tb_cc_deriv"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:checked="true"
                        android:showText="true"
                        android:textOff="@string/answer_no"
                        android:textOn="@string/answer_yes" />

                    <TextView
                        android:id="@+id/tb_cc_deriv_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/info_license_deriv"
                        android:textAppearance="?android:attr/textAppearanceSmall"

                        />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/tb_cc_sharealike"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:checked="false"

                        android:gravity="center_vertical"
                        android:textOff="@string/answer_no"
                        android:textOn="@string/answer_yes" />

                    <TextView
                        android:id="@+id/tb_cc_sharealike_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/info_license_sharealike"
                        android:textAppearance="?android:attr/textAppearanceSmall"

                        />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/tb_cc_comm"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:checked="true"
                        android:textOff="@string/answer_no"
                        android:textOn="@string/answer_yes" />

                    <TextView
                        android:id="@+id/tb_cc_comm_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/info_license_comm"
                        android:textAppearance="?android:attr/textAppearanceSmall" />


                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</FrameLayout>
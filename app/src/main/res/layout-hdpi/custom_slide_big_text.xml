<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="36dp"
    >


    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:src="@drawable/savelogo"/>
    <TextView
        android:id="@+id/custom_slide_big_text_headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save_by_openarchive"
        android:textColor="@color/oablue"
        android:layout_gravity="start|top"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_toRightOf="@+id/logo"
        />

    <TextView
        android:id="@+id/custom_slide_big_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="@string/onboarding_intro"
        android:textColor="@color/oablue"
        android:gravity="start"
        android:textStyle="bold"
        android:textSize="64sp"/>
    <TextView
        android:id="@+id/custom_slide_big_text_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_tag_line"
        android:textColor="@color/oablue"
        android:layout_gravity="start"
        android:textStyle="italic"
        android:textSize="16sp"
        android:layout_marginTop="6dp"
        android:layout_below="@id/custom_slide_big_text"
        />

    <Button
        android:id="@+id/custom_slide_button"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textColor="@color/oablue"
        android:text="Get Started >"
        android:background="@color/white"
        android:layout_gravity="end"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:visibility="gone"

        />
</RelativeLayout>
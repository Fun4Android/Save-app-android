<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:filterTouchesWhenObscured="true"
    android:padding="36dp">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:src="@drawable/savelogo" />

    <TextView
        android:id="@+id/custom_slide_big_text_headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|top"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/logo"
        android:text="@string/save_by_openarchive"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/custom_slide_big_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:gravity="start"
        android:text="@string/onboarding_intro"
        android:textColor="@color/colorPrimary"
        android:textSize="64sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/custom_slide_big_text_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/custom_slide_big_text"
        android:layout_gravity="start"
        android:layout_marginTop="6dp"
        android:text="@string/app_tag_line"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/custom_slide_button"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="end"
        android:background="@color/colorOnPrimary"
        android:text="Get Started >"
        android:textColor="@color/colorPrimary"
        android:visibility="gone"

        />
</RelativeLayout>
